<!DOCTYPE html>
<html>
  <head>
    <title>Everbrain</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>

    <script src="https://kit.fontawesome.com/e93199a89e.js" crossorigin="anonymous"></script>

    <link rel="shortcut icon" type="image/png" href="<%= image_url('favicon.ico') %>"/>

    <meta property="og:title" content="Everbrain" />
    <meta property='og:image' content="<%= image_url('everbrain-home.png') %>"/>
    <meta property="og:description"
      content="A second brain, forever."
    />
    <meta property="og:url"
      content="https://everbrain.herokuapp.com/"
    />

    <script type="text/javascript">
      window.heroAppURL = "<%= image_url('hp_hero_note.png') %>";
      window.EverbrainNavLogo = "<%= image_url('everbrain-logo.png') %>"
    </script>
  </head>

  <body>
    <%= yield %>
  </body>
</html>
